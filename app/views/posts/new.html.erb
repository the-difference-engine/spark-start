<div class="container">

<br><br>

<h2>Add Blog Post</h2>

<br>

<% @post.errors.full_messages.each do |error| %>
  <%= error %><br>
<% end %>

<%= form_tag '/blog', method: :post do %>
  <p><%= label_tag :title %><br>
  <%= text_field_tag :title, nil, size: 50 %></p>

  <p><%= label_tag :author %><br>
  <%= text_field_tag :author, nil, size: 50 %></p>

  <p><%= label_tag :body %><br>
  <%= text_area_tag :body, nil, cols: 100, rows: 6 %></p>

  <div id="categories">
    <button type="button" class="btn btn-success" @click="show = !show" @click.prevent>Choose Categories</button>
    <div class="row" v-if="show">
      <div v-for="category in categories">
        <div class="col-sm-6 col-md-3 col-lg-3">
          <input type="checkbox" id="{{category.name}}" value=" {{category.name}}" v-model="checkedCategories">
          <label for="{{category.name}}">{{category.name}}</label>
        </div>
      </div>
    </div>
    <p><%= label_tag :categories, "Categories" %> (Separate by commas):<br>
    <%= text_field_tag :category_string, "{{checkedCategories}}", size: 50 %></p>

    <div v-for="checkedCategory in checkedCategories">
      <input v-model="checkedCategory"> <button @click='deleteCategoryField(checkedCategory)' @click.prevent>delete</button> <br>
    </div>
    <button @click="addCategory" @click.prevent class="btn btn-info">Create New Category</button>
  </div>
  <br>

  <div id="tags">
    <button type="button" class="btn btn-success" @click="show = !show" @click.prevent>Choose Tags</button>
    <div class="row" v-if="show">
      <div v-for="tag in tags">
        <div class="col-sm-6 col-md-3 col-lg-3">
          <input type="checkbox" id="{{tag.tag_name}}" value=" {{tag.tag_name}}" v-model="checkedTags">
          <label for="{{tag.tag_name}}">{{tag.tag_name}}</label>
        </div>
      </div>
    </div>
    <p><%= label_tag :tags, "Tags" %> (Separate by commas):<br>
    <%= text_field_tag :tag_string, '{{checkedTags}}', size: 50 %></p>

    <div v-for="checkedTag in checkedTags">
      <input v-model="checkedTag"> <button @click='deleteTagField(checkedTag)' @click.prevent>delete</button> <br>
    </div>
    <button @click="addTag" @click.prevent class="btn btn-info">Create New Tag</button>

  </div>
  <br>

  <div id="tagsCategories">
    <%= submit_tag "Submit", class: 'btn btn-primary' %>
  </div>
<% end %>

</div>
