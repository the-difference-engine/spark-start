<h2>Edit Post</h2>

<br>

<%= form_tag "/blog/#{@post.id}", method: :patch do %>
  <p><%= label_tag :title %><br>
  <%= text_field_tag :title, @post.title %></p>

  <p><%= label_tag :author %><br>
  <%= text_field_tag :author, @post.author %></p>

  <p><%= label_tag :body %><br>
  <%= text_area_tag :body, @post.body %></p>

  <p>Tags (Separate by commas): <br>
  <%= text_field_tag :tag_string, @tag_string %>

  <p>Categories (Separate by commas): <br>
  <%= text_field_tag :category_string, @category_string %></p>

  <%= submit_tag "Save Edits" %><br>
  <%= link_to "Delete Post", "/blog/#{@post.id}", method: :delete %>
<% end %>