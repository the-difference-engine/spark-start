<h2>Edit Post</h2>

<br>

<%= form_tag "/blog/#{@post.id}", method: :patch do %>
  <p><%= label_tag :title %>
  <%= text_field_tag :title, @post.title %></p>

  <p><%= label_tag :author %>
  <%= text_field_tag :author, @post.author %></p>

  <p><%= label_tag :body %>
  <%= text_area_tag :body, @post.body %></p>

  <p><%= label_tag "Tags" %>
  <%= select_tag(:tag_id, options_for_select(@tag_options)) %></p>

  <p><b>New Tag </b><%= text_field_tag :tag_name %></p>

  <% @post.categories.each do |cat| %>
    <%= label_tag "Category" %>
    <%= text_field_tag :category, cat.name %>
  <% end %>

  <p><b>New Category </b><%= text_field_tag :name %></p>

  <%= submit_tag "Save" %><br>
  <%= link_to "Delete Post", "/blog/#{@post.id}", method: :delete %>
<% end %>