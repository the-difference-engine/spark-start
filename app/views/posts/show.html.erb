<div class="container">

<h1>Blog Posts</h1>
<br>
<p>Title: <%= @post.title %></p>
<p>Author: <%= @post.author %></p>
<p>Body: <%= @post.body %></p>
<p>Tags: <% @post.tags.each do |tag| %>

<h2><%= @post.title %></h2>
<p><b>Author:</b> <%= @post.author %></p><br>

<p><%= @post.body %></p><br>

<p><b>Tags:</b> <% @post.tags.each do |tag| %>
  <%= tag.tag_name %>
<% end %></p>

<p><b>Categories:</b> <% @post.categories.each do |cat_name| %>
  <%= cat_name.name %>
<% end %></p>

<br><br>

  <% @post.comments.each do |comment| %>
    <p><b>Comment:</b> <%= comment.body %></p>
  <% end %>

<br><br>

<%= form_tag '/comment', method: :post do %>
  <p><%= label_tag "Add A Comment" %><br>
  <%= text_area_tag :body %></p>
  <%= hidden_field_tag :post_id, @post.id %>
  <%= submit_tag "Submit" %>
<% end %>

</div>