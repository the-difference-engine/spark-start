<div ng-controller="booksCtrl">
  <div class="container" ng-cloak>
  <%= javascript_tag do %>
    window.book_id = "<%= @book.id %>";   
  <% end %>
    <div class="row">
      <div class="col-xs-3">
         <p></p>
      </div>
      <div class="col-xs-6" style="margin: 9vh 0vh">
        <h1>Welcome to the <span class="yellow">Spark</span><span class="blue">Tank</span>!</h1>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-3">
         <%= image_tag "#{@book.cover.url}", {class: "small_image right_justify_text" } %> 
            <% if @book.reached_max_downloads? %>
               <%= button_to "Download PDF", "/books/#{@book.id}/download", class: "btn btn-success right_justify_text black_text", :method => :get, form: {target: '_blank'} %>
             <% else %>
               <p>This book is no longer available</p>
               {{test}}
             <% end %>
      </div>
      <div class="col-xs-5">
        <h3><%= @book.title %> </h3>  
        <p><%= raw @book.description %></p>
      </div>

      <div>
        <div class="col-xs-4">
          <h1><span class="yellow">Spark</span><span class="blue">Starter</span><h1 style="margin-left: 12%">Questions</span></h1></h1>
          
          <ol>
            <li ng-repeat="question in questions">{{ question }}</li>
          </ol>

        </div>
      </div>
    </div>

    <div class="row">
      <div id="tabs" class="col-xs-12">
        <div ng-if="questionSelected">
          <%= render partial: "discussion" %>
        </div>
      </div>
    </div>
  </div>
</div>


