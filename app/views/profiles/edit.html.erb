<div class="container">

  <h1>Edit Your SparkStart Profile!</h1>
  
  <br>
  <% @profile.errors.full_messages.each do |error| %>
    <span style="color: red"><%= error %></span><br>
  <% end %>
  <br>

  <%= form_tag "/profile/#{@profile.id}", method: :patch do %>
  <div class="row">
      <div class="col-md-12">
        <div class="row">
          <div class="col-md-6">
            <%= label_tag :first_name %> <br>
            <%= text_field_tag :first_name, @profile.first_name, class: "form-control margin-b-20" %>
          </div>
          <div class="col-md-6">
            <%= label_tag :last_name %> <br>
            <%= text_field_tag :last_name, @profile.last_name, class: "form-control margin-b-20" %>
          </div>
        </div>
          <div class="row">
            <div class="col-md-6">
              <%= label_tag :experience %> <br>
              <%= text_field_tag :experience, @profile.experience, class: "form-control margin-b-20" %>
            </div>
            <div class="col-md-6">
              <%= label_tag :career %> <br>
              <%= text_field_tag :career, @profile.career, class: "form-control margin-b-20" %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <%= label_tag :city %> <br>
              <%= text_field_tag :city, @profile.city, class: "form-control margin-b-20" %>
            </div>
            <div class="col-md-6">
              <%= label_tag :state %> <br>
              <%= select_tag :state, options_for_select(us_states), multiple: false, class: "form-control margin-b-20" %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <%= label_tag :phone %> <br>
              <%= text_field_tag :phone, @profile.phone, class: "form-control margin-b-20" %>
            </div>
            <div class="col-md-6">
              <%= label_tag :image %> <br>
              <%= text_field_tag :image, @profile.image, class: "form-control margin-b-20" %>
            </div>
          </div>
            
          <div>
            <%= label_tag :bio %> <br>
            <%= text_area_tag :bio, @profile.bio, rows: 10, class: "form-control margin-b-20" %>    
          </div>

          <%= submit_tag "Submit", class: 'btn btn-xl btn-skin' %>

        </div>
  </div>
  <% end %>

</div>
