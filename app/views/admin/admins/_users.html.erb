
<h2 class="page-header">Manage Users <a href="new.html" class="btn btn-success">Add New</a></h2>
  <table class="table table-striped">
    <tr>
      <th>User Name</th>
      <th>User Email</th>
      <th>Admin?</th>
      <th>Created At</th>
      <th>Actions</th>
      <% @users.each do |user| %>
    </tr>
    <tr>
        <td><%= user.profile ? user.profile.full_name : "N/A" %></td>
        <td><%= user.email %></td>
        <td><%= user.admin %></td>
        <td><%= user.created_at.to_time.strftime('%B %e at %l:%M %p') %></td>
        <td><%= link_to "Edit", edit_admin_user_path(user), class: 'btn btn-primary' %> 
        <% unless user.id == @current_user.id %>
          <%= link_to "Delete", admin_user_path(user), class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this user?' } %>
        <% end %>
          
        </td>
      <% end %>
    </tr>
</table>

