<div class="container">

	<h3>Spark Directory</h3>

	<table style="width:100%">
		<thead></thead>

		<tr>
			<th>User Email</th>
			<th>User Role</th>
			<th>User Admin (Y/N)</th>
		</tr>
		<% @users.each do |user| %>
		<tr>
			<td><%= user.email %></td>
			<td><%= user.admin %></td>
			<% if user.admin == true %>
				<% checkbox = "yes" %>
				<% button = "active" %>
			<% else %>
				<% checkbox = "no" %>
				<% button = "inactive" %>
			<% end %>
			<td> <button class="btn btn-rounded <%= button %>" onClick="colorChange"><%= checkbox %></button>
</td>
		</tr>
		<% end %>
	</table>

</div>